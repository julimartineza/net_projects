@model IEnumerable<UCR.WEB.Blog.Models.Post>

@{
    ViewData["Title"] = "Publicaciones";
}

<div class="child m-5 ">


    @if (Model.Any())
    {
        <table class="table table-hover shadow-sm" style="background-color: #FFF;">
            <thead class="thead-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Title)</th>
                    <th>@Html.DisplayNameFor(model => model.Body)</th>
                    <th>@Html.DisplayNameFor(model => model.UserId)</th>
                    <th>@Html.DisplayNameFor(model => model.Category)</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.Title)</td>
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.Body)</td>
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.UserId)</td>
                        <td class="align-middle">@Html.DisplayFor(modelItem => item.Category)</td>
                        <td class="text-center align-middle">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm  btn-outline-dark mx-1">
                                Editar
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-dark mx-1">
                                Detalles
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger mx-1">
                                Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info text-center">
            No hay publicaciones disponibles. ¡Crea una nueva para empezar!
        </div>
    }
    <div class="d-flex justify-content-center align-items-center m-5">
        <a asp-action="Create" class="btn btn-primary btn-lg ">
            Crear Nueva Publicación
        </a>
    </div>
</div>
