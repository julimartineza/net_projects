@model UCR.WEB.Blog.Models.Post


<div class="container my-5">
    <div class="bg-light p-4 rounded shadow-sm">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <input asp-for="Id" class="form-control" type="hidden" />
            <input asp-for="UserId" class="form-control" type="hidden" />

            <div class="form-group mb-3">
                <label asp-for="Title" class="form-label fw-bold"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Body" class="form-label fw-bold"></label>
                <textarea asp-for="Body" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Body" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Category" class="form-label fw-bold"></label>
                <input asp-for="Category" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>

            @if (Model.ImageDataUrl != null)
            {
                <div class="text-center mb-4">
                    <img src="@Model.ImageDataUrl" alt="Imagen del Post" class="img-fluid rounded"
                        style="max-width: 50%; height: auto;" />
                </div>
            }

            <div class="form-group mb-3">
                <label for="ImageDataURL" class="form-label fw-bold">Imagen</label>
                <input type="file" name="ImageData" class="form-control" />
                <span asp-validation-for="ImageData" class="text-danger"></span>
            </div>

            <div class="column">
                <div class="form-group text-center mt-4 mb-4 d-flex justify-content-center gap-2">
                    <input type="submit" value="Guardar" class="btn btn-primary px-4" />
                    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
                </div>
            </div>

        </form>
    </div>
</div>
